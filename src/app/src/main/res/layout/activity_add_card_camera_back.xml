<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".AddCardCameraBackActivity">

    <ImageButton
        android:id="@+id/openCamera"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/round_corners_card"
        android:backgroundTint="@color/buttons"
        android:contentDescription="opencamera"
        android:src="@android:drawable/ic_menu_camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/capturedImage"
        android:layout_width="324dp"
        android:layout_height="232dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="279dp"
        android:layout_height="84dp"
        android:layout_marginTop="64dp"
        android:text="Kartenvorderseite\n       hinzufügen"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/capturedImage" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="335dp"
        android:layout_height="59dp"
        android:layout_marginTop="32dp"
        android:text="1. Öffne die Kamera mit dem unterem Knopf\n2. Richte die Karte gut erkennbar aus\n3. Foto auslösen"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />


</androidx.constraintlayout.widget.ConstraintLayout>